{
  "compilerOptions": {
    "lib": ["es2020"],
    "outDir": "./dist",
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "allowJs": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "types": ["node"]
  },

  "include": ["src/**/*.ts", "src/**/*.json", ".env"],
  "exclude": ["node_modules"]
}
